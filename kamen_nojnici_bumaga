from random import choice

actions = ["камень", "ножницы", "бумага"]

while True:
    human = input("Камень, ножницы, бумага?\n").lower()
    if (human not in actions):
        print("Такого варианта нет")
    else:
        computer_choice = choice(actions)
        print("Компьютер выбрал", computer_choice)

        if (human == "камень"):
            if (computer_choice == "камень"):
                print("Ничья")
            elif (computer_choice == "ножницы"):
                print("Вы победили")
            elif (computer_choice == "бумага"):
                print("Победил компьютер")

        elif (human == "ножницы"):
            if (computer_choice == "камень"):
                print("Победил компьютер")
            elif (computer_choice == "ножницы"):
                print("Ничья")
            elif (computer_choice == "бумага"):
                print("Вы победили")

        elif (human == "бумага"):
            if (computer_choice == "камень"):
                print("Вы победили")
            elif (computer_choice == "ножницы"):
                print("Победил компьютер")
            elif (computer_choice == "бумага"):
                print("Ничья")

    play_again = input("Сыграем еще? (д/н): ")
    if play_again.lower() != "д":
        break
